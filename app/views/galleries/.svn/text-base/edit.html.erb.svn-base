<%= render :partial => '/kitchens/kitchen_header', :locals => {:kitchen => @kitchen} %>
<%- model_class = @gallery.class -%>
<!-- < % = render :partial => 'form' % > -->
<div id="RC_Login_Wraper">
<div id="RC_Login_Box">
<%= form_for [@kitchen], :url => kitchen_gallery_path, :method => 'put', :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.fields_for @gallery do |g| %>
      
      <table width="100%" border="0" cellspacing="0" cellpadding="2">
        <tr>
            <td colspan="2" align="center" >
                <h4><%=t '.title', :default => t('helpers.titles.edit', :model => model_class.model_name.human,
                                   :default => "Edit Album") %></h4>
            </td>
        </tr>
        <tr>
            <td>
                <%= g.label "Album Name", :class => '' %>
            </td>
            <td>
                <% if @gallery.gallery_name == DEFAULT_GALLERY_NAME %>
                    <label class = '' style="">
                        ...
                    </label>
                <% else %>
                    <%= g.text_field :gallery_name, :class => '', :style => '' %>
                <% end %>
            </td>
        </tr>
        <tr>
            <td>
                <%= g.label :description, :class => '' %>
            </td>
            <td>
                <%= g.text_field :description, :class => '', :style => '' %>
            </td>
        </tr>
        <tr>
            <td colspan="2" align="center">
                <%= g.submit "Update Album", :class => 'submit' %>
                <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                            kitchen_galleries_path(@kitchen), :class => 'btn btn-large', :style => 'margin-top: 10px;' %>
            </td>
        </tr>
      </table>
  <% end %>
<% end %>
</div>
</div>
<div class="clear"></div>