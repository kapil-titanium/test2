<%= form_for [@kitchen], :url => kitchen_galleries_path, :method => 'post', :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.fields_for @gallery do |g| %>
      <div class="control-group">
        <%= g.label "Album Name", :class => 'control-label' %>
        <div class="controls">
          <%= g.text_field :gallery_name, :class => 'text_field' %>
        </div>
      </div>
      <div class="control-group">
        <%= g.label :description, :class => 'control-label' %>
        <div class="controls">
          <%= g.text_field :description, :class => 'text_field' %>
        </div>
      </div>
    
      <div class="form-actions">
        <%= g.submit nil, :class => 'btn btn-mini btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    kitchen_path(@kitchen), :class => 'btn btn-mini' %>
      </div>
  <% end %>
<% end %>
