</script>
<% if orders.present? %>
<div style="overflow-y: auto; height: 400px;">
    <table width="100%" border="0" cellspacing="0" cellpadding="2" style="background:#fef7ea;"> <!-- class="display dataTable" id="tblKitchenOpenOrders" -->
        <tr style="background:#900; color:#fff; text-align:left;">
            <th>Order Number</th>
            <th>Order Date</th>
            <th>Delivery Date</th>
            <th>Total Amount</th>
            <th>Status</th>
            <% if (can? :access, Order) %>
            <th>User</th>
            <th>User Settlement</th>
            <th>Kitchen</th>
            <th>Kitchen Settlement</th>
            <th>Remark</th>         
            <th>Date</th>
            <% end %>
        </tr>
        <% orders.each do |order| %>
            <!-- < % line_dish_menu_item = li.dish_menu_item % > -->
            <tr style="border-bottom:1px solid #900;">
                <td>
                    <a href='<%= order_path(order) %>'><%= order.order_number %></a>
                </td>
                <td>
                    <%= order.created_at.strftime("%d %B %Y") %>
                </td>
                <td>
                    <%= order.delivery_date.strftime("%d %B %Y") %>
                </td>
                <td>
                    Rs. <%= order.grand_total %>
                </td>
                <td>
                    <%= order.status %>
                </td>
                <% if can? :access, Order %>
                <td>
                    <%= order.user.get_name if order.user %>
                </td>
                <td>
                    Rs. <%= order.amount_received %>
                </td>
                <td>
                    <%= link_to order.kitchen.kitchen_name, :title => order.status if order.kitchen %>
                </td>
                <td>
                    Rs. <%= order.amount_settled %>
                </td>
                <td>
                    <%= order.remark %>
                </td>
                <td>
                    <%= order.updated_at.strftime('%d %b %Y %H:%M:%S') %>
                </td>
                <% end %>
            </tr>
        <% end %>
    </table>
</div>
<% else %>
<div>
    No Order available
</div>
<% end %>
