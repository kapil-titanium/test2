<script>
	function validateFields() {
		if ($('#user_name').val().trim() == "") {
			$('#error_message').html("Please enter your registered Email Id");
			return false;
		} else
			return true;
	}
</script>
<script>
	function UserNameRequired() {
		alert(document.getElementById("generate").text);
		if (document.getElementById("generate").value == "") {
			alert("Username Required");
			return false;
		}
		return true;
	}
</script>

<div class="">
    <div class="auth-error" style="color: red;margin-top: 10px; margin-left: 134px;">
        <% flash.each do |k, v| %>
            <label style="color: #FF0000; font-size: 12px;"><%= v %></label>
        <% end %>
    </div>
	<div id="RC_Login_Wraper">
		<div id="RC_Login_Box">
            <% if @login.errors.any? %>
            <div id="err_msgs" class = "error_messages">
                <h2>Error</h2>
                <%= f.error_messages %>
            </div>
            <% end %>
            <%= form_for @login, :url => logins_send_temporary_password_path, :id => "demo" do |f| %>
			<table width="100%" border="0" cellspacing="0" cellpadding="2">
				<tr>
                    <td>
                        <h4> Forgot Password </h4>
                    </td>
                </tr>
                <tr>
                    <td><label class="subhead">Please Enter Your Registered Email Id</label></td>
                </tr>
                <tr>
                    <td>
                        <%= f.text_field :user_name, :id => "user_name", :style => "width:235px;" %>
                        <label style="color: #FF0000; font-size: 12px;" id="error_message"></label>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label style="color: #FF0000; font-size: 12px;" id="confirm_password_error_message"></label>
                    </td>
                </tr>
                <tr>
                    <td>
                        <%= f.submit "Generate", :class => 'loginbtn', :id => "btnSubmit", :onclick => 'return validateFields();' %>
                        <%= f.submit "Cancel", :class => 'loginbtn' %>
                    </td>
                </tr>
                <tr>
                    <td>Forgot <%= link_to("Password?", { :action=> 'forgot_password', :controller => 'logins'})%> | <%= link_to("Username?", { :action=> 'forgot_username',  :controller => 'logins'})%></td>
                </tr>
                <tr>
                    <td>
                        Login? <%= link_to "Click Here", {:action => 'new', :controller => 'logins'} %> | New Consumer? <%= link_to("Click Here",{:action=>'new',:controller =>'users'})%>
                    </td>
                </tr>
			</table>
			<% end %>
		</div><!--RC_Login_Box-->
	</div><!--RC_Login_Wraper-->

	<div class="clear"></div>

</div><!-- END LEFT COL OF MAIN CONTENT-->

