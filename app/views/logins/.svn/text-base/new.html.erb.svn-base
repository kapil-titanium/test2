<script>
	function registration_page() {
		window.open('/users/new')
		return false;
	};
</script>
<div class="left">
    <div class="auth-error" style="color: red;margin: 0 0 0 155px;">
        <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %> </ br>
        <% end %>
    </div>
	<div id="RC_Login_Wraper">
		<div id="RC_Login_Box">
			<%= form_for @login, :validate => false, :url => {:controller=>'logins', :action =>'create' } do |f| %>
			<table width="100%" border="0" cellspacing="0" cellpadding="2">
				<tr>
					<td><h4> Login </h4></td>
				</tr>
				<tr>
					<td><label class="subhead">Username or Email </label></td>
				</tr>
				<tr>
					<td> <%= f.text_field :user_name, :required => true, :style => "" %> </td>
				</tr>
				<tr>
					<td><label class="subhead">Password </label></td>
				</tr>
				<tr>
					<td> <%= f.password_field :password, :required => true, :style => "" %> </td>
				</tr>
				<tr>
					<td>
					<input id="remember" name="remember_me" value="1" type="checkbox" style="margin-top:-3px;" />
					Remember me </td>
				</tr>
				<tr>
					<td>
					    <%= f.submit "Login", :class => "loginbtn" %>
					    <%= f.submit "Consumer Registration", :class=>'loginbtn', :onclick => 'return registration_page();' %> 
				    </td>
				</tr>
				<tr>
					<td> Forgot <%= link_to("Password?", { :action=> 'forgot_password', :controller => 'logins'}) %> | <%= link_to("Username?", { :action=> 'forgot_username',  :controller => 'logins'}) %></td>
				</tr>
			</table>
			<% end %>
		</div><!--RC_Login_Box-->
	</div><!--RC_Login_Wraper-->
	<div class="clear"></div>
</div><!-- END LEFT COL OF MAIN CONTENT-->

<div class="right"></div><!-- END RIGHT SIDE BAR COL OF MAIN CONTENT-->
<div class="clear"></div>