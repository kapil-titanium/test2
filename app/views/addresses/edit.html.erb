<%= form_for @address, :url => user_address_path(@user, @address) do |address| %>
    <div id="RC_Reg_Wraper">
        <div id="RC_Reg_Box">
            <table width="100%" border="0" cellspacing="0" cellpadding="2">
            <%= render :partial => 'address_fields', :locals => {:a => address} %>
            <tr>
                <td colspan="2">
                    <%= address.submit('Update', :class => "Regbtn" ) %>
                </td>
            </tr>
            </table>
        </div>
    </div>
<% end %>