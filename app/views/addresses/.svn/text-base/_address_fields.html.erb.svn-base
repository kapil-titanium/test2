<tr>
    <td>
        <label class="subhead">Address Heading
    </label>
    </td>
    <td>
        <%= a.text_field :name, :style => "width:235px;" %>
    </td>
</tr>
<tr>
    <td>
        <label class="subhead">Address line1 <sapn style="color: red;" >*</sapn>
    </label>
    </td>
    <td>
        <%= a.text_field :line1, :title => 'Street address, P.O. box, company name, c/o', :style => "width:235px;" %>
    </td>
</tr>
<tr>
    <td>
        <label class="subhead">Address line2
    </label>
    </td>
    <td>
        <%= a.text_field :line2, :title => 'optional', :style => "width:235px;" %>
    </td>
</tr>
<tr>
    <td>
        <label class="subhead">Address line3
    </label>
    </td>
    <td>
        <%= a.text_field :line3, :title => 'optional', :style => "width:235px;" %>
    </td>
</tr>
<tr>
    <td>
        <label class="subhead">Landmark
    </label>
    </td>
    <td>
        <%= a.text_field :landmark, :style => "width:235px;" %><br /><sapn>(Please specify landmark if any)</sapn>
    </td>
</tr>
<tr>
    <td>
        <label class="subhead">Area <sapn style="color: red;" >*</sapn>
    </label>
    </td>
    <td>
    	<%= a.select :area, options_from_collection_for_select(@areas, :area_name, :area_name_titleized ), :prompt => "Select Area" %>
    	<!-- < %= a.collection_select "", :area, Area.where(:status => AREA_STATUS_ACTIVE).to_a.uniq{|x| x.area_name}.sort{|a,b| a.area_name <=> b.area_name}, :area_name, :area_name_titleized, :prompt =>  "Select Delivery Area" % > -->
    	<!-- < %= a.select :area, areas,  {:include_blank => 'Select Area'}, :class => "", :style => "width:248px;" % > -->
        <!-- < % = a.text_field :area, :title => 'Area', :style => "width:235px;" % > -->
        <!-- < %= a.autocomplete_field :area, autocomplete_area_name_searches_path, :title => 'Area', :class => '', :style => "width:235px;" % > -->
    	<br /><span class="field_with_errors message" id="area_error_id" style="color: red;font-size: 12px"></span>
    </td>
</tr>
<tr>
    <td>
        <label class="subhead">City <sapn style="color: red;" >*</sapn>
    </label>
    </td>
    <td>
    	<%= a.text_field :city, :value => "pune", :readonly => true, :style => "width:235px;" %>
        <!-- < % = a.text_field :city, :title => 'City', :style => "width:235px;" % > -->
        <!-- < %= a.autocomplete_field :city, autocomplete_city_name_searches_path, :class => '', :title => 'City', :style => "width:235px;" % > -->
    </td>
</tr>
<tr>
    <td>
        <label class="subhead">State <sapn style="color: red;" >*</sapn>
    </label>
    </td>
    <td>
        <%= a.select :state, STATES, {:include_blank => 'Select State'}, :class => "", :style => "width:248px;" %>
    	<br /><span class="field_with_errors message" id="state_error_id" style="color: red;font-size: 12px"></span>
    </td>
</tr>
<tr>
    <td>
        <label class="subhead">Pin Code <sapn style="color: red;" >*</sapn>
    </label>
    </td>
    <td>
        <%= a.text_field :pincode, :style => "width:235px;", :class => 'only_numerics' %>
    </td>
</tr>
<tr>
    <td>
        <label class="subhead">Country <sapn style="color: red;" >*</sapn>
    </label>
    </td>
    <td>
        <%= a.select :country, COUNTRY, {:include_blank => 'Select Country'}, :class => "", :style => "width:248px;" %>
    </td>
</tr>
