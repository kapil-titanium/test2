	</div>
</div><!-- end K_Dish_Display -->
</div>


	<!-- START Pop-up to CREATE DISH -->
	<!-- Please toPopup_model_---- class always apply as first class  -->
<div id="create_dish_popup" class="popup_block custom content" style="width: 350px;margin-left: -200px;margin-top: 50px">
	<%= form_for( [@kitchen, @dish], :validate => true ) do |f| %>
		<a href="#" class="avgrund-close"></a>
		<h3>Create Dish</h3>
		<h5>Please Select the information for your dish:</h5>
		<table>
			<tr>
				<td valign="center">Dish Name</td>
				<td>:</td>
				<td>
					 <%= f.text_field :dish_name, :id => 'dish_name' %>
				</td>
			</tr>
			<tr><td></td><td></td><td><label id='dish_name_error' style="font-size: 12px;color: red"> </label></td></tr>
			<tr>
				<td valign="center">Course</td>
				<td>:</td>
				<td>
					<%= f.select :course_id, options_from_collection_for_select(@courses, 'id', 'course_name'), :prompt => 'Select course type' %>
				</td>
			</tr>
			<tr><td></td><td></td><td> <label id='course_id_error' style="font-size: 12px;color: red"> </label></td></tr>	
			<tr>
				<td colspan="3" align="center"><%= f.submit "Create Dish", :class => "submit", :id => 'create_dish_button' %></td>
			</tr>
		</table>	
	<% end %>
</div>	
	<!--END OF  Pop-up to CREATE DISH -->
	
