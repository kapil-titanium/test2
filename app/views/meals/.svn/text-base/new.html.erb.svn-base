<%= render :partial => 'meal_jquery_code' %>
<%= render :partial => '/kitchens/kitchen_header', :locals => {:kitchen => @kitchen} %>
<div id="RC_Meal_Box">
	<%= link_to 'Back', kitchen_meals_path(@kitchen), :style => "margin-left:95%",  :class => "btn btn-success" %>
	<%= form_for(@meal, :validate => true, :url =>{:action => 'create' } ) do |f| %>
	<%= render 'meal_fields', :f => f %>
	<table width="100%" border="0" cellspacing="0" cellpadding="2">
		<tr>
			<td colspan="2" align="center">
				 <%= f.submit "Create Meal", :id => 'meal_submit', :class => 'btn btn-success' %>
			</td>
		</tr>
	</table>
	<% end %>

</div><!--RC_Login_Box-->
<div class="clear"></div>

<!--End meal form-->

<div class="clear"></div>