<div id="MyBasketWraper">
	<h1 style="color:#990000;">My Cart</h1>
	<% if 1 %> <!-- TODO: delete and uncomment below line -->
	<!-- < % if (!@baskets_items.nil? && !@baskets_items.blank?) % > -->
	<div id='basket_line_items_div'>
	    <%= render :partial => 'basket_line_items', :locals => { :baskets_items => @baskets_items, :delivery_date => Date.today, :city_error => '', :error_basket_line_items => [] } %>
	</div>
	
	<table width="100%" border="0" cellspacing="0" cellpadding="2" id="address_table_holder">
		<tr>
			<td width="60%" style=" text-align:left; vertical-align:middle;">
                <span style = "font-weight: bold; display: block; margin-left: 10px;">Special Instructions : </span>
                <span style="width: 400px; margin-left: 10px; display: block;"><%= (sp_instruction = @basket.special_instruction).present? ? sp_instruction : "Not Available" %></span>
            </td>
			<td width="40%">
            <table align="right" width="98%" border="0" cellspacing="0" cellpadding="2" style="background:#fef7ea;">
                <tr style="border-bottom:1px solid #900;">
                    <td style="width:200px; font-weight:bold; padding-left:10px;">Sub Total</td><td style="width:5px;">:</td><td style="width:400px; color:900; text-align:right; padding-right:45px;">Rs. <span id="sub_total"> <%= @basket.sub_total %> </span></td>
                </tr>
                <tr style="border-bottom:1px solid #900;">
                    <td style="font-weight:bold; padding-left:10px;">Tax</td><td>:</td><td style=" color:900; text-align:right; padding-right:45px;">Rs. <span> <%= @basket.total_tax %> </span></td>
                </tr>
                <tr style="border-bottom:1px solid #900;">
                    <td style="font-weight:bold; padding-left:10px;">D &amp; S Charges</td><td>:</td><td style=" color:900; text-align:right; padding-right:45px;">Rs. <span> <%= @basket.delivery_charge %> </span></td>
                </tr>
                <tr style="border-bottom:1px solid #900;">
                    <td style="font-weight:bold; padding-left:10px;">Grand Total</td><td>:</td><td style=" color:900; text-align:right; padding-right:45px;">Rs. <span id="grand_total"> <%= @basket.grand_total %> </span></td>
                </tr>
            </table></td>
		</tr>
	</table>
	
	<% if current_user %>
    	<%= render :partial => 'basket_address', :locals => { :address => @address, :addresses => @addresses } %>
	<% else %><!-- current_user else -->
	<div style="margin: 10px auto; display: block; text-align: center; color: #f00; font-weight: bold;">
        Please <%= link_to "login", new_login_path %> first to confirm your Order
    </div>
    <% end %><!-- current_user if ends -->
    
    <% else %><!-- basket condition else -->
    <div>
        <!-- margin-left: 355px; -->
        <center>
            <h4 style="color: #f00;">Oopsss...!!! The cart is empty.
            <br />
            To add some meals <%= link_to "click here.", root_path, :style => "color:#2277BB;" %></h4>
        </center>
    </div>
    <% end %><!-- basket condition if ends -->

</div><!--end MyBasketWraper-->

<div class="clear"></div>